<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3bb654"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@mipmap/soccerfield" />

    <ImageButton
        android:id="@+id/newPlayerProfileButton"
        android:layout_margin="2.5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_button"
        android:scaleType="fitXY"
        android:src="@mipmap/futbol"
        android:text="New Player\nProfile"
        android:onClick="goToNewPlayerProfileSetup"/>

    <ImageButton
        android:id="@+id/savedPlayerProfilesButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2.5dp"
        android:layout_alignParentEnd="true"
        android:onClick="goToSavedPlayerProfiles"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_button"
        android:scaleType="fitXY"
        android:src="@mipmap/futbol"
        android:text="Saved Player\nProfiles" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2.5dp"
        android:onClick="goToSettings"
        android:layout_centerInParent="true"
        android:background="@drawable/round_button"
        android:scaleType="fitXY"
        android:src="@mipmap/futbol"
        android:text="Settings" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newPlayerProfileButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:layout_margin="2.5dp"

        android:text="New Player\nProfile"
        android:textColor="#000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingsButton"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Settings"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_margin="2.5dp"

        android:textColor="#000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newPlayerProfileButton"
        android:layout_alignParentEnd="true"
        android:textColor="#000"
        android:layout_margin="2.5dp"

        android:textSize="18dp"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:text="Saved Player\nProfiles" />


</RelativeLayout>